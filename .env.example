# Environment
NODE_ENV=development

# Data Seeding Control
# Set to 'true' to skip all test/mock data seeding (recommended for production)
SKIP_TEST_DATA=false
# Set to 'true' to skip inventory seeding (useful for production or when managing inventory manually)
SKIP_INVENTORY_SEEDING=false

# Server
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shambit_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-long-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# API
API_VERSION=v1
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ORIGIN=*

# Security
# Encryption key for sensitive data at rest (AES-256)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-secure-encryption-key-min-32-chars-change-this-in-production

# Firebase Cloud Messaging (FCM)
# Get these from Firebase Console > Project Settings > Service Accounts
# Generate a new private key and use the values from the JSON file
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# SMS Configuration
SMS_PROVIDER=fast2sms
SMS_SENDER_ID=SHAMBIT
# FAST2SMS_API_KEY=your_fast2sms_api_key_here

# Alternative SMS Providers (uncomment to use)
# SMS_PROVIDER=textlocal
# SMS_API_KEY=your_textlocal_api_key
# SMS_API_URL=https://api.textlocal.in/send/

# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# SMS_PROVIDER=aws_sns
# AWS_REGION=ap-south-1
