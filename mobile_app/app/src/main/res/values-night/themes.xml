<!--?xml version="1.0" encoding="utf-8"?-->
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shambit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color palette -->
        <item name="colorPrimary">@color/sham_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/sham_blue</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/bit_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/bit_orange</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorTertiary">@color/tagline_medium_gray</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/tagline_medium_gray</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/search_bar_background_dark</item>
        <item name="colorOnSurfaceVariant">@color/tagline_medium_gray</item>
        <item name="colorOutline">@color/tagline_medium_gray</item>

        <!-- Status bar & navigation bar -->
        <item name="android:statusBarColor">@color/sham_blue</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Shambit.Splash" parent="Theme.Shambit">
        <item name="android:windowBackground">@drawable/splash_gradient_background</item>
    </style>
</resources>