# ============================================================================
# NOTIFICATION SYSTEM - PRODUCTION CONFIGURATION
# ============================================================================

# Redis Configuration (Required)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Queue Configuration
QUEUE_CONCURRENCY=20
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Rate Limiting
RATE_LIMIT_ENABLED=true

# ============================================================================
# EMAIL CONFIGURATION (Choose one provider)
# ============================================================================

# Email Provider: smtp, ses, sendgrid
EMAIL_PROVIDER=ses
EMAIL_FROM_NAME=Your Marketplace
EMAIL_FROM_EMAIL=noreply@yourdomain.com

# AWS SES Configuration (Recommended for production)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your_aws_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key

# SMTP Configuration (Alternative)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password

# SendGrid Configuration (Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================================================
# SMS CONFIGURATION (Choose one provider)
# ============================================================================

# SMS Provider: twilio, sns
SMS_PROVIDER=twilio
SMS_MAX_LENGTH=160

# Twilio Configuration (Recommended)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# AWS SNS Configuration (Alternative)
# AWS_SNS_REGION=us-east-1
# AWS_SNS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SNS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================================================
# PUSH NOTIFICATION CONFIGURATION
# ============================================================================

# Push Provider: fcm, apns
PUSH_PROVIDER=fcm

# Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID=your_firebase_project_id
FCM_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----"
FCM_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Apple Push Notification Service (APNS) - if needed
# APNS_KEY_ID=your_apns_key_id
# APNS_TEAM_ID=your_apple_team_id
# APNS_BUNDLE_ID=com.yourapp.bundleid
# APNS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour APNS private key here\n-----END PRIVATE KEY-----"
# APNS_PRODUCTION=true

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================

WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRIES=3
WEBHOOK_USER_AGENT=YourMarketplace-NotificationService/1.0

# ============================================================================
# DEDUPLICATION CONFIGURATION
# ============================================================================

DEDUPLICATION_TTL=3600
DEDUPLICATION_HASH_ALGORITHM=sha256

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# SECURITY
# ============================================================================

# Encrypt sensitive data in database
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000