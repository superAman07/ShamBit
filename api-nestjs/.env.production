# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/shambit_prod?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-32-CHAR-SECRET-IN-PRODUCTION"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="CHANGE-THIS-TO-A-SECURE-32-CHAR-REFRESH-SECRET-IN-PRODUCTION"
JWT_REFRESH_EXPIRES_IN="7d"

# Google OAuth
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"
GOOGLE_CALLBACK_URL="https://yourdomain.com/api/v1/auth/google/callback"

# Server Configuration
PORT=3001
NODE_ENV="production"
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DEST="./uploads"

# S3 Configuration (for production)
AWS_ACCESS_KEY_ID="your-production-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-production-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-production-s3-bucket-name"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-production-email@gmail.com"
SMTP_PASS="your-production-app-password"

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Commission Defaults
DEFAULT_COMMISSION_RATE=5.0

# Inventory
LOW_STOCK_THRESHOLD=5
RESERVATION_EXPIRY_MINUTES=15

# Multi-Tenancy
DEFAULT_TENANT_ID="default"
TENANT_CACHE_TTL=3600

# API Security - CHANGE THESE IN PRODUCTION
INTERNAL_API_TOKEN="CHANGE-THIS-TO-A-SECURE-TOKEN-IN-PRODUCTION"
API_KEY_HEADER="x-api-key"

# Data Lifecycle
DATA_RETENTION_DAYS=2555  # 7 years
ARCHIVE_AFTER_DAYS=365    # 1 year
HARD_DELETE_AFTER_DAYS=365 # 1 year after archival

# Feature Flags
ENABLE_MULTI_TENANCY=true
ENABLE_ADVANCED_AUTH=true
ENABLE_SAGA_ORCHESTRATION=true
ENABLE_READ_MODELS=true
ENABLE_DATA_LIFECYCLE=true

# Logging
LOG_LEVEL="warn"
LOG_FORMAT="json"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Payment Gateways
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"