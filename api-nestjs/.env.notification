# ============================================================================
# NOTIFICATION SYSTEM CONFIGURATION
# ============================================================================

# Redis Configuration (for queues and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Queue Configuration
QUEUE_CONCURRENCY=10
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email Provider: smtp, ses, sendgrid
EMAIL_PROVIDER=smtp
EMAIL_FROM_NAME=Marketplace Notifications
EMAIL_FROM_EMAIL=noreply@marketplace.com

# SMTP Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# AWS SES Configuration (for production)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=

# SendGrid Configuration (alternative)
SENDGRID_API_KEY=

# ============================================================================
# SMS CONFIGURATION
# ============================================================================

# SMS Provider: twilio, sns, nexmo
SMS_PROVIDER=twilio
SMS_MAX_LENGTH=160

# Twilio Configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# AWS SNS Configuration
AWS_SNS_REGION=us-east-1
AWS_SNS_ACCESS_KEY_ID=
AWS_SNS_SECRET_ACCESS_KEY=

# ============================================================================
# PUSH NOTIFICATION CONFIGURATION
# ============================================================================

# Push Provider: fcm, apns
PUSH_PROVIDER=fcm

# Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# Apple Push Notification Service (APNS)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=
APNS_PRIVATE_KEY=
APNS_PRODUCTION=false

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================

WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRIES=3
WEBHOOK_USER_AGENT=NotificationService/1.0

# ============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# ============================================================================

# Mock Mode (for development/testing)
NOTIFICATION_MOCK_MODE=false

# Test Recipients
TEST_EMAIL=test@example.com
TEST_PHONE=+1234567890
TEST_DEVICE_TOKEN=test_device_token

# ============================================================================
# DEDUPLICATION CONFIGURATION
# ============================================================================

DEDUPLICATION_TTL=3600
DEDUPLICATION_HASH_ALGORITHM=sha256

# ============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# ============================================================================

# Set to true to enable mock services for development
NOTIFICATION_MOCK_MODE=false

# Test email for development
TEST_EMAIL=test@example.com
TEST_PHONE=+1234567890
TEST_DEVICE_TOKEN=test_device_token