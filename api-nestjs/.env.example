# Database
DATABASE_URL="postgresql://username:password@localhost:5432/marketplace_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Configuration (Enhanced Security)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="15m"  # Short-lived access tokens for security
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/v1/auth/google/callback"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration (Production)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DEST="./uploads"

# S3 Configuration (for production)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Commission Defaults
DEFAULT_COMMISSION_RATE=5.0

# Inventory
LOW_STOCK_THRESHOLD=5
RESERVATION_EXPIRY_MINUTES=15

# Multi-Tenancy
DEFAULT_TENANT_ID="default"
TENANT_CACHE_TTL=3600

# API Security
INTERNAL_API_TOKEN="your-internal-api-token-change-this"
API_KEY_HEADER="x-api-key"

# Data Lifecycle
DATA_RETENTION_DAYS=2555  # 7 years
ARCHIVE_AFTER_DAYS=365    # 1 year
HARD_DELETE_AFTER_DAYS=365 # 1 year after archival

# Feature Flags
ENABLE_MULTI_TENANCY=true
ENABLE_ADVANCED_AUTH=true
ENABLE_SAGA_ORCHESTRATION=true
ENABLE_READ_MODELS=true
ENABLE_DATA_LIFECYCLE=true

# Razorpay Configuration
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# Security Configuration
COOKIE_SECRET="your-cookie-secret-key-change-this-in-production"
ENCRYPTION_KEY="your-32-byte-hex-encryption-key-change-this"