{
  "name": "@shambit/database",
  "version": "1.0.0",
  "description": "Database utilities and migrations for ShamBit platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "seed:run": "knex seed:run"
  },
  "dependencies": {
    "@shambit/shared": "*",
    "dotenv": "^17.2.3",
    "knex": "^3.1.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.0"
  }
}
