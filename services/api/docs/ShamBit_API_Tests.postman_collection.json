      "name": "Task 7 - Promotions",
      "item": [
        {
          "name": "Create Promotion (Percentage)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has promotion ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data.id).to.exist;",
                  "    pm.collectionVariables.set(\"promotionId\", jsonData.data.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"WELCOME10\",\n  \"description\": \"10% off for new users\",\n  \"discountType\": \"percentage\",\n  \"discountValue\": 10,\n  \"minOrderValue\": 50000,\n  \"maxDiscountAmount\": 10000,\n  \"usageLimit\": 100,\n  \"perUserLimit\": 1,\n  \"startDate\": \"2025-10-25T00:00:00Z\",\n  \"endDate\": \"2025-12-31T23:59:59Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/promotions",
              "host": ["{{baseUrl}}"],
              "path": ["promotions"]
            }
          }
        },
