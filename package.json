{
  "name": "shambit-platform",
  "version": "1.0.0",
  "description": "ShamBit Quick Commerce Platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "cd services/api && npm start",
    "start:api": "cd services/api && npm start",
    "start:admin": "cd services/admin-portal && npm run preview",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd packages/database && npm run migrate:latest",
    "db:rollback": "cd packages/database && npm run migrate:rollback",
    "db:seed": "cd packages/database && npm run seed:run",
    "deploy:build": "npm install && npm run build && npm run db:migrate",
    "generate:secrets": "node scripts/generate-secrets.js",
    "health:check": "node scripts/health-check.js",
    "security:audit": "node scripts/security-audit.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
